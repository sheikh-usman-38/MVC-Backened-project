<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
        <% if (allListings && allListings.length > 0) { %>
            <% allListings.forEach(listing => { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem">
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b><br>
                                &#x20A8;<%= listing.price.toLocaleString("en-PK") %>/night
                                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <p>No listings found for this category.</p>
        <% } %>
    </div>
    
</body>
</html>
